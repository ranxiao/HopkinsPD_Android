<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:textColor">@color/white</item>
     	<!-- <item name="android:buttonStyle">@style/ButtonWhiteTheme</item> -->
    </style>
    <style name="ButtonWhiteTheme" parent="android:style/Widget.Button">
     	<item name="android:textColor">@color/white</item>
	</style>
	<style name="AppBlackTheme" parent="android:Theme.Black">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:textColor">@color/black</item>
     	<item name="android:buttonStyle">@style/ButtonBlackTheme</item>
    </style>
    <style name="ButtonBlackTheme" parent="android:style/Widget.Button">
     	<item name="android:textColor">@color/black</item>
	</style>
</resources>